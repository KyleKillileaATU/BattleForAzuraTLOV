<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BattleForAzuraTLOV.MainPage"
             Background="LimeGreen">
    <Grid>
        <Image 
            x:Name ="BackgroundIMG"
            Source="cityview.png" 
            HeightRequest="3000"
            WidthRequest="3000"
            Aspect="AspectFill"
    
            SemanticProperties.Description="player" 
            />  
        <BoxView x:Name ="PlayerCameraBox"
         Color ="DarkBlue"
         WidthRequest ="300"
         HeightRequest ="220"/>
        
        <BoxView x:Name ="PlayerHitBox"
         Color ="DarkGreen"
         WidthRequest ="90"
         HeightRequest ="90"/>
        <Ellipse x:Name ="Projectile01"
         WidthRequest="20"
         HeightRequest="30"
         Fill="DarkGray"
         />
        <Ellipse x:Name ="Projectile02"
         WidthRequest="20"
         HeightRequest="30"
         Fill="DarkGray"
         />
        <Ellipse x:Name ="Projectile03"
         WidthRequest="20"
         HeightRequest="30"
         Fill="DarkGray"
         />
        <Ellipse x:Name ="Projectile04"
         WidthRequest="20"
         HeightRequest="30"
         Fill="DarkGray"
         />
        <Ellipse x:Name ="Projectile05"
         WidthRequest="20"
         HeightRequest="30"
         Fill="DarkGray"
         />
        <Ellipse x:Name ="Projectile06"
         WidthRequest="20"
         HeightRequest="30"
         Fill="DarkGray"
         />
        <Ellipse x:Name ="Projectile07"
         WidthRequest="20"
         HeightRequest="30"
         Fill="DarkGray"
         />
        <Ellipse x:Name ="Projectile08"
         WidthRequest="20"
         HeightRequest="30"
         Fill="DarkGray"
         />
        <Ellipse x:Name ="Projectile09"
         WidthRequest="20"
         HeightRequest="30"
         Fill="DarkGray"
         />
        <Ellipse x:Name ="Projectile10"
         WidthRequest="20"
         HeightRequest="30"
         Fill="DarkGray"
         />
        <Ellipse x:Name ="Projectile11"
         WidthRequest="20"
         HeightRequest="30"
         Fill="DarkGray"
         />
        
        <Image 
            x:Name ="PlayerIMG"
            Source="walter3.png" 
            HeightRequest="100"
            WidthRequest="100"
            Aspect="AspectFill"
            
            SemanticProperties.Description="player" 
            />
        <Image 
             x:Name ="ei1"
             Source="ahomeless.png" 
             HeightRequest="45"
             Aspect="AspectFit"
             SemanticProperties.Description="enemy" 
             />
        <Image 
             x:Name ="ei2"
             Source="injuredsoldier.png" 
             HeightRequest="45"
             Aspect="AspectFit"
             SemanticProperties.Description="enemy" 
             />
        <Image 
             x:Name ="ei3"
             Source="sadman.png" 
             HeightRequest="45"
             Aspect="AspectFit"
             SemanticProperties.Description="enemy" 
             />
        <Image 
             x:Name ="ei4"
             Source="medipeasant.png" 
             HeightRequest="45"
             Aspect="AspectFit"
             SemanticProperties.Description="enemy" 
             />
        <Image 
             x:Name ="ei5"
             Source="angryfarmer.png" 
             HeightRequest="45"
             Aspect="AspectFit"
             SemanticProperties.Description="enemy" 
             />
        <Image 
             x:Name ="ei6"
             Source="british.png" 
             HeightRequest="45"
             Aspect="AspectFit"
             SemanticProperties.Description="enemy" 
             />
        <Image 
             x:Name ="ei7"
             Source="childadventuerer.png" 
             HeightRequest="45"
             Aspect="AspectFit"
             SemanticProperties.Description="enemy" 
             />
        <Image 
             x:Name ="ei8"
             Source="commonsoldier.png" 
             HeightRequest="45"
             Aspect="AspectFit"
             SemanticProperties.Description="enemy" 
             />
        <VerticalStackLayout HorizontalOptions="Start" VerticalOptions="End" Padding="10,20" Spacing="5">
            <Button x:Name="leftmovebutton"  Text="Move" Clicked="MoveBTN_Clicked" WidthRequest="100" TextColor="OrangeRed" BackgroundColor="LightBlue"/>
        </VerticalStackLayout>
        <VerticalStackLayout HorizontalOptions="End" VerticalOptions="End" Padding="10,20,10,20" Spacing="5">
            <Button x:Name="attackbutton"  Text="Shoot" Clicked="AttackBTN_Clicked" WidthRequest="80" TextColor="blue" BackgroundColor="Red"/>
        </VerticalStackLayout>
        <HorizontalStackLayout HorizontalOptions="Start" VerticalOptions="Start" Padding="10,20,10,20" Spacing="5">
            <BoxView x:Name ="PlayerMagicbase"
              Color="#393939"
              WidthRequest ="30"
              HeightRequest ="150"/>
            <BoxView x:Name ="PlayerHPbase"
              Color="#393939"
              WidthRequest ="30"
              HeightRequest ="150"/>
            <BoxView x:Name ="PlayerStaminabase"
              Color="#393939"
              WidthRequest ="30"
              HeightRequest ="150"/>
            <BoxView x:Name ="PlayerMagicbar"
              Color="#af0039"
              WidthRequest ="25"
              HeightRequest ="140"/>
            <BoxView x:Name ="PlayerHPbar"
              Color="#39cf3a"
              WidthRequest ="25"
              HeightRequest ="140"/>
            <BoxView x:Name ="PlayerStaminabar"
              Color="#ffff39"
              WidthRequest ="25"
              HeightRequest ="140"/>
        </HorizontalStackLayout>
        <!-- menu screens go here  -->
        <Image 
         x:Name ="TitleScreen01"
         Source="dishonouredtitlescreen.png" 
         HeightRequest="550"
         Aspect="AspectFit"
         SemanticProperties.Description="title screen" 
         />
        <Image 
         x:Name ="BattleForAzuraTitle"
         Source="battleforazuratitleimg.png" 
         HeightRequest="150"
         Aspect="AspectFit"
         SemanticProperties.Description="big title" 
         />
        <Image 
         x:Name ="NewGameScreen01"
         Source="dishonourednewgamescreen.png" 
         HeightRequest="550"
         Aspect="AspectFit"
         SemanticProperties.Description="new game screen" 
         />
        <!-- screen buttons go here  -->
        <Grid>
            <!-- title  -->
            <Button x:Name="NewGamebutton"  Text="New Game" Clicked="NGameBTN_Clicked" WidthRequest="120" HeightRequest ="30" TextColor="#a9a9a9" BackgroundColor="#393939"/>
            <Button x:Name="Continuebutton"  Text="Continue" Clicked="ConBTN_Clicked" WidthRequest="120" HeightRequest ="30"  TextColor="#a9a9a9" BackgroundColor="#393939"/>
            <Button x:Name="Trainingbutton"  Text="Testing Area" Clicked="TrainBTN_Clicked" WidthRequest="120" HeightRequest ="30"  TextColor="#a9a9a9" BackgroundColor="#393939"/>
            <Button x:Name="Missionbutton"  Text="Missions" Clicked="MissionBTN_Clicked" WidthRequest="120" HeightRequest ="30"  TextColor="#a9a9a9" BackgroundColor="#393939"/>
            <Button x:Name="SuperShopbutton"  Text="Super Store" Clicked="SShopBTN_Clicked" WidthRequest="120" HeightRequest ="30"  TextColor="#a9a9a9" BackgroundColor="#393939"/>
            <Button x:Name="Brutalbutton"  Text="Brutal" Clicked="BrutaBTN_Clicked" WidthRequest="120" HeightRequest ="30"  TextColor="#a9a9a9" BackgroundColor="#393939"/>
            <Button x:Name="Challengebutton"  Text="Challenges" Clicked="ChallBTN_Clicked" WidthRequest="120" HeightRequest ="30"  TextColor="#a9a9a9" BackgroundColor="#393939"/>
            <Button x:Name="Musicbutton"  Text="BGM Custom" Clicked="MusicBTN_Clicked" WidthRequest="120" HeightRequest ="30"  TextColor="#a9a9a9" BackgroundColor="#393939"/>
            <Button x:Name="Settingsbutton"  Text="Options" Clicked="SettingsBTN_Clicked" WidthRequest="120" HeightRequest ="30"  TextColor="#a9a9a9" BackgroundColor="#393939"/>
            
            <!-- new game  -->
            <Button x:Name="easydiffbutton"  Text="Easy" Clicked="EasyDBTN_Clicked" WidthRequest="220" HeightRequest ="15" TextColor="#a9a9a9" BackgroundColor="#393939"/>
            <Button x:Name="normaldiffbutton"  Text="Normal" Clicked="NormDBTN_Clicked" WidthRequest="220" HeightRequest ="15"  TextColor="#a9a9a9" BackgroundColor="#393939"/>
            <Button x:Name="harddiffbutton"  Text="Hard" Clicked="HardDBTN_Clicked" WidthRequest="220" HeightRequest ="15"  TextColor="#a9a9a9" BackgroundColor="#393939"/>
            <Button x:Name="veryharddiffbutton"  Text="Very Hard" Clicked="VHardDBTN_Clicked" WidthRequest="220" HeightRequest ="15"  TextColor="#a9a9a9" BackgroundColor="#393939"/>
            <Button x:Name="accept01button"  Text="Accept" Clicked="Accept01BTN_Clicked" WidthRequest="80" HeightRequest ="10"  TextColor="#a9a9a9" BackgroundColor="#393939"/>
            <Button x:Name="leavebutton"  Text="Exit" Clicked="EscapeBTN_Clicked" WidthRequest="80" HeightRequest ="10"  TextColor="#a9a9a9" BackgroundColor="#393939"/>
            
            <!-- Continue game  -->
            <Button x:Name="saveslot1button"  Text="Save 1" Clicked="Save1BTN_Clicked" WidthRequest="150" HeightRequest ="15" TextColor="#a9a9a9" BackgroundColor="#393939"/>
            <Button x:Name="saveslot2button"  Text="Save 2" Clicked="Save2BTN_Clicked" WidthRequest="150" HeightRequest ="15"  TextColor="#a9a9a9" BackgroundColor="#393939"/>
            <Button x:Name="saveslot3button"  Text="Save 3" Clicked="Save3BTN_Clicked" WidthRequest="150" HeightRequest ="15"  TextColor="#a9a9a9" BackgroundColor="#393939"/>
            <Button x:Name="deletesavebutton"  Text="Delete" Clicked="DelSaveBTN_Clicked" WidthRequest="80" HeightRequest ="15"  TextColor="#a9a9a9" BackgroundColor="#393939"/>
            <Button x:Name="accept02button"  Text="Accept" Clicked="Accept02BTN_Clicked" WidthRequest="80" HeightRequest ="10"  TextColor="#a9a9a9" BackgroundColor="#393939"/>
            <Button x:Name="leave02button"  Text="Exit" Clicked="EscapeBTN_Clicked" WidthRequest="80" HeightRequest ="10"  TextColor="#a9a9a9" BackgroundColor="#393939"/>

        </Grid>
        <!-- archived
        <Button x:Name="NewTutorialbutton"  Text="Tutorial" Clicked="NTutorBTN_Clicked" WidthRequest="120" HeightRequest ="30"  TextColor="#a9a9a9" BackgroundColor="#393939"/>
-->
    </Grid>
    
                
</ContentPage>
