<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BattleForAzuraTLOV.MainPage"
             Background="LimeGreen">
    <Grid>
        <Image 
            x:Name ="BackgroundIMG"
            Source="cityview.png" 
            HeightRequest="3000"
            WidthRequest="3000"
            Aspect="AspectFill"
    
            SemanticProperties.Description="player" 
            />  
        <BoxView x:Name ="PlayerCameraBox"
         Color ="DarkBlue"
         WidthRequest ="300"
         HeightRequest ="220"/>

        <BoxView x:Name ="PlayerHitBox"
         Color ="DarkGreen"
         WidthRequest ="90"
         HeightRequest ="90"/>

        <Image 
            x:Name ="PlayerIMG"
            Source="walter3.png" 
            HeightRequest="100"
            WidthRequest="100"
            Aspect="AspectFill"
            
            SemanticProperties.Description="player" 
            />
        <Image 
             x:Name ="ei1"
             Source="ahomeless.png" 
             HeightRequest="45"
             Aspect="AspectFit"
             SemanticProperties.Description="enemy" 
             />
        <Image 
             x:Name ="ei2"
             Source="injuredsoldier.png" 
             HeightRequest="45"
             Aspect="AspectFit"
             SemanticProperties.Description="enemy" 
             />
        <Image 
             x:Name ="ei3"
             Source="sadman.png" 
             HeightRequest="45"
             Aspect="AspectFit"
             SemanticProperties.Description="enemy" 
             />
        <Image 
             x:Name ="ei4"
             Source="medipeasant.png" 
             HeightRequest="45"
             Aspect="AspectFit"
             SemanticProperties.Description="enemy" 
             />
        <Image 
             x:Name ="ei5"
             Source="angryfarmer.png" 
             HeightRequest="45"
             Aspect="AspectFit"
             SemanticProperties.Description="enemy" 
             />
        <Image 
             x:Name ="ei6"
             Source="british.png" 
             HeightRequest="45"
             Aspect="AspectFit"
             SemanticProperties.Description="enemy" 
             />
        <Image 
             x:Name ="ei7"
             Source="childadventuerer.png" 
             HeightRequest="45"
             Aspect="AspectFit"
             SemanticProperties.Description="enemy" 
             />
        <Image 
             x:Name ="ei8"
             Source="commonsoldier.png" 
             HeightRequest="45"
             Aspect="AspectFit"
             SemanticProperties.Description="enemy" 
             />
        <VerticalStackLayout HorizontalOptions="Start" VerticalOptions="End" Padding="10,20" Spacing="5">
            <Button x:Name="leftmovebutton"  Text="Move" Clicked="MoveBTN_Clicked" WidthRequest="100" TextColor="OrangeRed"/>
        </VerticalStackLayout>
    </Grid>
    
                
</ContentPage>
